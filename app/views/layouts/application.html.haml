%head
  %meta{ :charset => "utf-8" }

  -# Uncomment to make IE8 render like IE7
  -# meta http-equiv="X-UA-Compatible" content="IE=7"
  
  -# Set the viewport width to device width for mobile
  %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }

  %title Dynasty Owner
    

  -# Included CSS Files
  = stylesheet_link_tag "application"
  = stylesheet_link_tag "foundation"
  = javascript_include_tag "foundation"
  -# Included JS Files
  = javascript_include_tag "application"

  = csrf_meta_tag

%body
  .container
    %p.brand 
      Dynasty Owner
      %ul.nav
        %li.active
          = link_to 'About'
        %li 
          = link_to 'Player Research', people_path
        %li
          = link_to 'My Teams'
        %li 
          = link_to 'Account'
      .secondary_nav
        %p.pull-right
          - if user_signed_in?
            %p.pull-right
              Signed in as #{current_user.email} 
              = link_to "Sign Out", destroy_user_session_path, :method => :delete, :class =>  "btn danger"
          - else
            
            %p.pull-right
              = link_to "Sign Up", new_user_registration_path, :class => "btn primary"
              or 
              = link_to "Sign In", new_user_session_path, :class => "btn success"
  #user.container
  .row#wrap
    .four.columns  
      - if user_signed_in?
        .alert-box.success
  
          = current_user.email
          Control Panel
        %h1
          Your Teams
        %ul
          - current_user.teams.each do |team|
            %li.two.columns
              = link_to team.name, user_team_path(team)
            %li.four.columns
              = link_to team.league.name, league_path(team.league_id)
    .eight.columns
      = yield