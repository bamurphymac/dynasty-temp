%body
  #dynasty-navbar.container
    .row
      .three.columns
        %h1
          = image_tag 'navbar_logo.png'
      .nine.columns.hide-on-phones.clean.right
        %span.button.nice.small.black
          = Clock.first.time.strftime("%B %e, %Y")
        = link_to "Home", root_url, :class => "button nice small blue"
        //%a.button.nice.small.black(data-reveal-id="playerResearch") Research
        //%a.button.nice.small.black(data-reveal-id="userTeams") Teams
        //%a.button.nice.small.black(data-reveal-id="userAccount") Account
        //%a.button.nice.small.black(data-reveal-id="timeTravel") TimeMachine


  /*Primary Page Header Bar
  .container
    .row
      .twelve.columns
        - if @league
          .foundation-header
            %h1
              Good
              - if Time.now.hour <= 12
                Morning,
              - if Time.now.hour > 12
                Afternoon,
              #{@team.user.name}.

            %h4.subheader
              It's
              %strong
                = Clock.first.nice_time
              and there are #{@team.schedules.where(:outcome => nil).count} games left in the season.
              %br
              Your record is
              %strong
                = @team.schedules.where(:outcome => '1').count
                for
                = @team.schedules.where('outcome != ?', nil).count
              and you have
              %strong
                #{number_to_currency(@team.balance)}
              in the bank. What are you going to do?

    .row
      .nine.columns
        /*Core Content
        - flash.each do |key, msg|
          .alert-box.success
            = msg
        = yield

      .three.columns
        - if user_signed_in?
          .panel
            .alert-box.success
              Signed in as
              = current_user.name
            .alert-box.error
              Not you?
              = link_to "Sign Out", destroy_user_session_path


        - if @league

          = render :partial => "user_teams/bank_account"
          = render :partial => "user_teams/schedule_table"
          = render :partial => "user_teams/time_machine"


















