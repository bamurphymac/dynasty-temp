%body
  .top-bar
    .container
      .row
        .three.columns
          %img.show-on-desktops{:src => "/assets/images/logo_med.png"}
          %img.show-on-tablets{:src => "/assets/images/logo_small.png"}
          %img.show-on-phones{:src => "/assets/images/logo_tiny.png"}
        %ul.nav-bar.clean
          %li
            %a.nice.large.radius.button(data-reveal-id="playerResearch") Research Players
          %li
            %a.nice.large.radius.button(data-reveal-id="userTeams") My Teams
          %li
            %a.nice.large.radius.button(data-reveal-id="userAccount") My Account
  

.panel
  %h3
    Time Machine Control
  %h3
    Current Date:
    = Clock.first.time.strftime("%B %e, %Y")
  %h3
    Fast Forward
    = link_to "Next Week", "/clock/2/next_week"
    Reset (careful)
    = link_to "RESET", "/clock/2/reset"
  .container
    .row
      .twelve.columns
        #user
          .row
          - if user_signed_in?
            .alert-box.success
              = current_user.email
              Control Panel
              = link_to "Sign Out", destroy_user_session_path, :method => :delete, :class =>  "btn danger"
            %h5
              Your Teams
            %dl.nice.vertical.tabs
              - current_user.teams.each do |team|
                %dd
                  = link_to team.name, user_team_path(team)

          = yield


  #playerResearch.reveal-modal
    .three.columns
      %h2 Player Research
      %dl.nice.vertical.tabs
        - Position.all.each do |p|
          %dd
            = link_to p.name, p, :class=> "nice large radius button"
    %a.nice.large.red.button.close-reveal-modal Close

  #userTeams.reveal-modal
    %h2 User Teams Modal
    %a.nice.large.red.button.close-reveal-modal Close

  #userAccount.reveal-modal
    %h2 User Account Modal

    %a.nice.large.red.button.close-reveal-modal Close


  #footer
    = render :partial => "devise/shared/links"