%body
  .top-bar.container
    .row
      .three.columns
        = image_tag 'logo_med.png', :class => 'show-on-desktops'
        = image_tag 'logo_small.png', :class => 'show-on-tablets'
        = image_tag 'logo-tiny.png', :class => 'show-on-phones'
      .nine.columns
      %ul.nav-bar.clean
        %li
          %a.nice.large.radius.button(data-reveal-id="playerResearch") Research
        %li
          %a.nice.large.radius.button(data-reveal-id="userTeams") Teams
        %li
          %a.nice.large.radius.button(data-reveal-id="userAccount") Account
        %li
          %a.nice.large.radius.button(data-reveal-id="timeTravel") TimeMachine





  .content.container

    = yield


  #playerResearch.reveal-modal
    .three.columns
      %h2 Player Research
      %dl.nice.vertical.tabs
        - Position.all.each do |p|
          %dd
            = link_to p.name, p, :class=> "nice large radius button"
    %a.nice.large.red.button.close-reveal-modal Close

  #userTeams.reveal-modal
    %h2 User Teams Modal
    %a.nice.large.red.button.close-reveal-modal Close

  #userAccount.reveal-modal
    %h2 User Account Modal

    %a.nice.large.red.button.close-reveal-modal Close

  #timeTravel.reveal-modal
    %h5
      McFly's DeLorean
    .alert-box
      = Clock.first.time.strftime("%B %e, %Y")
    %p
      = link_to "Fast Forward 1 Week", "/clock/2/next_week", :class => "nice button blue small radius"
    %p
      = link_to "Reset To Season Start", "/clock/2/reset", :class => "nice button blue small radius"
    %p
      = link_to "Fast Forward To Real Date", "/clock/2/present", :class => "nice button blue small radius"

  #footer
    = render :partial => "devise/shared/links"