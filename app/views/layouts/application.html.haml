%head
  %meta{ :charset => "utf-8" }
  -# Uncomment to make IE8 render like IE7
  -# meta http-equiv="X-UA-Compatible" content="IE=7"
  -# Set the viewport width to device width for mobile
  %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }

  %title Dynasty Owner

  -# Included CSS Files
  = stylesheet_link_tag "application"

  -# Included JS Files
  = javascript_include_tag "application"
  = csrf_meta_tag


  %script{:src => "http://js.pusherapp.com/1.9/pusher.min.js", :type => "text/javascript"}

  :javascript
    $('div#clock').text('#{Time.now}');

    Pusher.log = function(message) {
      if (window.console && window.console.log) window.console.log(message);
    };

    var pusher = new Pusher('#{Pusher.key}');
    var chrono = pusher.subscribe('chrono-channel');
    chrono.bind('update', function(data) {
      $('div#clock').text(data);
    });
%body

  .top-bar
    .container
      .row
        .three.columns
          %img.show-on-desktops{:src => "/assets/images/logo_med.png"}
          %img.show-on-tablets{:src => "/assets/images/logo_small.png"}
          %img.show-on-phones{:src => "/assets/images/logo_tiny.png"}
        %ul.nav-bar.clean.nine.columns.hide-on-phones
          %li
            = link_to 'Player Research', people_path
          %li
            = link_to 'My Teams'
          %li
            = link_to 'Account'
          %li
            = Time.now.strftime("%A %B %d, %Y")

  .container.wrapper
    // %video#video_background{:src => "/assets/videos/85145349_q.mov", :loop => true, :autoplay => true}
    .row
      .twelve.columns
        #user
          .row
            .three.columns
              - if user_signed_in?
                .alert-box.success
                  = current_user.email
                  Control Panel
                  = link_to "Sign Out", destroy_user_session_path, :method => :delete, :class =>  "btn danger"
                %h5
                  Your Teams
                %dl.nice.vertical.tabs
                  - current_user.teams.each do |team|
                    %dd
                      = link_to team.name, user_team_path(team)
            .nine.columns
              // %h1.bigtext.franchiseFont Dynasty Owner
              // %h2.hugetext.franchiseFont Change the Game!
              = yield
  %script{:src =>"/assets/js/jquery.fittext.js", :type => "text/javascript"}
  %script
    $(".bigtext").fitText();
    $(".hugetext").fitText(.5);