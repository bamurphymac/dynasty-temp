%head
  %meta{ :charset => "utf-8" }
  %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
  %meta{:content => "yes", :name => "apple-mobile-web-app-capable"}
  %title= 'Dynasty Owner'
  %script{:src => "http://api.html5media.info/1.1.5/html5media.min.js"}
  -# drop the client's UUID in here for use with socket subscriptions and the like
  - if @team
    :javascript
      window.CHANNEL = '#{@team.uuid}'
  = stylesheet_link_tag "application" # Included CSS Files
  = javascript_include_tag "application" # Included JS Files
  = csrf_meta_tag
  = favicon_link_tag
// Body
%body
  = render :partial => "shared/login_modal"
  // Sitewide Nav Bar
  = render :partial => "shared/nav_wrapper"
  // The Page Stack
  .container.main_yield{"data-pjax-container" => ""}
    .row-fluid
      .span12
        // Global Errors
        #global-errors
          = render :partial => "shared/global-errors"
        #sub-pages
        = render :partial => "shared/sub_pages"
        // Main Content
        = yield

