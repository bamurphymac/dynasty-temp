= stylesheet_link_tag 'forms'
= semantic_form_for @league, :url => edit_league_path(@league), :html => { :class => 'nice' } do |f|
  .row.twelve.columns.centered
    .panel
      %h3 Edit #{@league.name}
      = render :partial => 'form', :locals => { :form => f }
      = f.submit 'Submit', :class => 'nice small radius blue button'
