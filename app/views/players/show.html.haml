.row.person
  .panel
    %h3
      = @player.name.full_name
      = link_to "Add Player", @player
    %p
      Contract Summary: $
      = @player.contract.summary
      over
      = @player.contract.length
      years, ending in
      = @player.contract.end_year
    %p
      Yearly Salary: $
      = @player.contract.amount
    %p
      Free Agent:
      = @player.contract.free_agent_year
    %p
      Fantasy Points Earned Last Season:
      = @player.points
      |
      Dynasty Weighted FPTS:
      =  (@player.points) #/ (@player.contract.amount / 1000000).to_i
    %p


    %p
      This Season's Performance
.row
  .twelve.columns
    %table.twelve.columns
      %thead
        %tr
          %td
            Event Date
          %td
            PTS
          %td
            Pass
          %td
            Rush
          %td
            Def
          %td
            Score
          %td
            ST
          %td
            Sck
          %td
            Fmbl
          %td
            *
      %tbody
      - @player.event_points.each do |pep|
        %tr
          %td
            = pep.event.start_date_time.strftime("%B %e, %Y")
          %td
            = pep.points
          %td
            = pep.passing_points
          %td
            = pep.rushing_points
          %td
            = pep.defensive_points
          %td
            = pep.scoring_points
          %td
            = pep.special_teams_points
          %td
            = pep.sacks_against_points
          %td
            = pep.fumbles_points
          %td




