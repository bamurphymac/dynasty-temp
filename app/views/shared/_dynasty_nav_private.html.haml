.navbar.navbar-fixed-top
  .navbar-inner
    .container
      // Brand and Logo Stay Here
      = render :partial => 'shared/dynasty_logo'
      // Collapsible nav for tablets/phones
      .row
        .span8.offset4
          %a.btn.btn-navbar{'data-target' => '.nav-collapse', 'data-toggle' => 'collapse'}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          // Hidden at 940 PX or less
          .nav-collapse
            // Primary Nav
            %ul.nav.pull-right
              = render :partial => 'shared/dynasty_nav_dropdowns'
              %li
                .btn-group
                  %a.btn.btn-inverse.dropdown-toggle{'data-toggle' => 'dropdown', :href => '#'}
                    = t :signed_in, :attribute => current_user.email, :scope => :nav
                    %b.caret
                    %ul.dropdown-menu
                      %li
                        = link_to 'Edit User Profile', edit_user_registration_path
                      %li
                        = link_to 'Sign Out?', destroy_user_session_path
                      %li
                        %a{:href => '#'} Manage Account

// Secondary Nav
.row
  .subnav.subnav-fixed
    .container
      .row
        .span8.offset4
          %ul.nav.nav-pills.pull-right
            %li
              %a{:href => '/coaches_corner_home'} Coaches Corner
            %li
              %a{:href => '/front_office_home'} Front Office
            %li
              %a{:href => '/mockups/team_marketplace'} Team Marketplace
            %li
              %a{:href => '/payments/purchase_dynasty_dollars'} Purchase Dynasty Dollars



