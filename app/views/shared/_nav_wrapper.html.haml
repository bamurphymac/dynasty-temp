=javascript_include_tag 'clock'
#dynasty-navbar.navbar.navbar-fixed-top
  .navbar-inner
    .container
      // Brand and Logo Stay Here
      %a.logo{:href=>'/'}
        %img.logo.visible-desktop.pull_left{:src => "/assets/single_logo_minimal.png"}
        %img.logo.hidden-desktop.pull_left{:src => "/assets/navbar_logo.png"}
      // Collapsible nav for tablets/phones
      .row

        %a.btn.btn-navbar{'data-target' => '.nav-collapse', 'data-toggle' => 'collapse'}
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        // Hidden at 940 PX or less
        .nav-collapse
          // Primary Nav
          %ul.nav.pull-right
            - if user_signed_in?
              %li
                %a#date= number_to_currency(current_user.team.balance)
            %li.divider-vertical
            %li.dropdown
              %a.dropdown-toggle{'data-toggle' => 'dropdown', :href => '#'}
                Tutorial
                %b.caret
              %ul.dropdown-menu
                %li
                  %a= t 'nav.video1' |
                %li
                  %a= t 'nav.video2' |
                %li
                  %a= t 'nav.video3' |
                %li
                  %a= t 'nav.video4' |

            %li.divider-vertical
            %li
              %a{:href => '/research', :class => "#{controller_name === ("research" or "player")  ? 'active' : ''}"} Player Research

            %li.divider-vertical
            %li
              .btn-group
                - unless user_signed_in?
                  %a.btn.btn-inverse{:href => "/payments/payment"}
                    Create an Account.
                  %a.btn.btn-inverse{:href => "/login"}
                    Sign In

                - if user_signed_in?
                  // Secondary Nav
                  %a.btn.btn-primary
                    %i.icon-user.icon-white
                    = t :signed_in, :attribute => current_user.first_name, :scope => :nav
                  %a.btn.btn-primary.dropdown-toggle{'data-toggle' => 'dropdown', :href => '#'}
                    %b.caret

                  %ul.dropdown-menu
                    %li
                      %a{:href => edit_user_registration_path}
                        %i.icon-pencil.pad-right &nbsp; Edit Profile
                    %li
                      %a{:href => '#'}
                        %i.icon-th-list.pad-right &nbsp; Manage Account
                    %li
                      %a{:href => '/teams/'}
                        %i.icon-cog.pad-right &nbsp; Edit Team
                    %li.divider
                    %li
                      %a{:href => destroy_user_session_path}
                        %i.icon-off.pad-right &nbsp; Sign Out?
    - if user_signed_in?
      .subnav.subnav-fixed
        .container


          %ul.nav.nav-pills.pull-right

            %li.dropdown
              %a.dropdown-toggle{:href => '#', :data => {:toggle => 'dropdown'}, :class => "#{controller_name === "coaches_corner" ? 'active' : ''}"} Coach's Corner
              %ul.dropdown-menu
                %li
                  %a{:href => '/coachs_corner/game_review'} Game Review
                %li
                  %a{:href => '/coachs_corner/manage_starters'} Manage Starters


            //TODO: Pages under Trades Controller need to highlight player research
            %li.dropdown
              %a.dropdown-toggle{:href => '#', :data => {:toggle => 'dropdown'}, :class => "#{controller_name === "front_office" ? 'active' : ''}"} Front Office
              %ul.dropdown-menu
                %li
                  %a{:href => '/front_office/roster'} Manage Roster
                  %a{:href => '/front_office/trades'} Trades
                  %a{:href => '/front_office/waivers'} Waiver Wire
            %li
              %a{:href => '/mockups/league_review', :class => "#{controller.action_name === "league_review" ? 'active' : ''}"} League Review

            %li
              %a{:href => '/financials', :class => "#{controller.action_name === "financials" ? 'active' : ''}"} Team Financials
            %li
              %a{:href => '/payments/purchase_dynasty_dollars', :class => "#{controller.action_name === ("purchase_dynasty_dollars" or "dynasty_dollars_receipt") ? 'active' : ''}"} Purchase Dynasty Dollars
