- unless user_signed_in?
  .modal#loginModal.dismissable.fade
    .modal-header
      = render :partial => 'shared/modals/modal_header'
      %h3 Log In
    .modal-body
      = simple_form_for :user, :url => new_user_session_path, :html => { :class => 'login' } do |f|
        = render :partial => '/users/shared/login_form', :locals => { :form => f }
        = f.button :submit, 'Submit'
      = link_to 'Forgot your password?', new_password_path('user')
