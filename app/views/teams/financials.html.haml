= javascript_include_tag controller_base_name
= stylesheet_link_tag controller_base_name
- content_for :title, "Team Financials"
- content_for :section_title, current_user.team.name

.row
  .span12
    %h3= current_user.team.name
    %h5
      Balance:
      = current_user.team.balance.format
    %table.team-financials-data.table.table-striped.table-bordered.datatable{:border => "0", :cellpadding => "0", :cellspacing => "0"}
      %thead
        %tr
          %th id
          %th Payment From
          %th Paid To
          %th Event
          %th Event Type
          %th Amount
          %th Balance
          %th Date

      %tbody
        - @accounts.each do |a|
          %tr
            %td= a.id
            %td= a.payable.andand.name ||= "The Fed"
            %td= a.receivable.andand.name ||= "The Fed"
            %th= a.event_id
            %th= a.event_type
            %th= number_to_currency(0.01 * a.amount_cents)
            %th Balance
            %th
              = time_tag a.transaction_datetime
