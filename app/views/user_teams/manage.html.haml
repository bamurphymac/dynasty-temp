.container
  .row
    .panel
      %h5
        Your Dashboard
        %p
          %strong
            GAME RESULTS: WEEK
            = @last_game.week
        %p
          %strong
            You
            - if @last_game.outcome == 1
              Won!
            - if @last_game.outcome == 0
              Lost!
            You got
            = @team.game.last.points
            points and
            = UserTeam.find(@last_game.opponent_id).name
            got
            = UserTeam.find(@last_game.opponent_id).game.last.points
            points.
        %p
          Your next game is against #{@team.schedules.where(:outcome => nil).first.opponent.name}.
          Remember to set your starters!

  .row
    %dl.nice.contained.tabs
      %dd
        = link_to "Roster", "#roster", :class => "active"
      %dd
        = link_to "Set Starters", "#starters"
      %dd
        = link_to "Trades", "#trades"
      %dd
        = link_to "Research", "#research"
      %dd
        = link_to "Waiver Wire", "#waiver"
      / %dd
      /  = link_to "League Review", "#league"
    %ul.nice.tabs-content.contained

      = render :partial => "roster_tab"

      = render :partial => "starters_tab"

      = render :partial => "trades_tab"

      = render :partial => "research_tab"

      = render :partial => "waiver_tab"

      = render :partial => "league_tab"









