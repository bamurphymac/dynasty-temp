.panel
  %h4 User Control Panel


  %p
  - if @team
    .panel
      %p
        League Name:
        %strong= @team.league.name
      %p
        Team Name:
        %strong= @team.name
      %p
        Team Balance:
        %strong= number_to_currency(@team.balance)

      - if @team.players.count > 0
        = link_to 'Manage Team', "#{manage_team_url(@team, :subdomain => @team.league.slug, :anchor => 'roster')}", :class => 'small nice black button radius'

      - if @team.players.count < 1
        - unless @team.league.draft.nil? || @team.league.draft.status === :finished
          = link_to 'Go to The Draft',  "#{draft_url(:subdomain => @team.league.slug)}", :class => 'small nice blue button radius'
          = link_to 'Set AutoPick Order', auto_pick_url, :class => 'small nice black button radius'
  - elsif current_user.leagues.size > 0
    - league = current_user.leagues.first
    %h5= league.name
    = link_to 'Edit', edit_league_path(league)
    - if league.teams.count === Settings.league.capacity && league.draft.nil?
      |
      = link_to (I18n.t 'schedule_draft', :scope => :user_cp), edit_league_path(league)
  - else
    = link_to 'Create New League', new_league_path, :class => 'small nice blue button radius'
    = link_to 'View League List', leagues_path, :class => 'small nice black button radius'
