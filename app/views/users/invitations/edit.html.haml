= content_for :title, 'Set your password'
.row.span4
  = simple_form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put, :class => [ 'well', 'form-inline' ] } do |f|
    = devise_error_messages!
    = f.hidden_field :invitation_token, :autocomplete => :off
    = f.input :first_name, :required => true
    = f.input :last_name, :required => true
    = f.input :password, :required => true
    = f.input :password_confirmation, :label => 'Confirm password', :required => true
    = f.button :submit, 'Submit'
