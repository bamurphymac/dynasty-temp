= stylesheet_link_tag 'forms'
= javascript_include_tag 'register'
= devise_error_messages!
= semantic_form_for @user, :url => create_user_registration_path, :remote => true, :html => { :id => 'register', :class => 'nice' } do |f|
  .row.six.columns.centered
    .panel
      %h4
        Complete your Registration.
      %p
        Please choose your password to complete account registration.
      = render :partial => '/users/shared/registration_form', :locals => { :form => f }
