= stylesheet_link_tag 'forms'
= javascript_include_tag 'register'
= devise_error_messages!
= semantic_form_for @user, :url => create_user_registration_path, :remote => true, :html => { :id => 'register', :class => 'nice' } do |f|
  .row.span12.centered
    .well.well-light
      %h1
        Sign up for Dynasty Owner
      %h2
        Modal Flow Begins Here

      %p
        %a.btn.btn-primary.btn-large.span10{:href => "#joinModal", :data => {:toggle => "modal"}} GET STARTED!

      = render :partial => '/users/shared/registration_form', :locals => { :form => f }


.modal#joinModal.fade
  .modal-header
    %button.close{:data => {:dismiss => "modal"}}x
    %h3
      Flow Process Begins Here
  .modal-body
    %p

  .modal-footer
    %a.btn{:href => "#"} Close
