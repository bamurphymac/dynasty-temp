- if user_signed_in?
  .welcome.clean
    Welcome, #{current_user.first_name}!
    = link_to "Not you?", destroy_session_path(devise_mapping.singular), :method => :delete
    %img{ :src => "#{current_user.gravatar_url :size => 50}" }
- else
  - if devise_mapping.registerable? && controller_name != 'registrations'
    .col.right
      = button_to 'Sign up', new_user_registration_path, :class => 'nice small radius white button signup', :tabindex => 5, :method => :get
  = form_tag new_user_session_path, :class => 'nice login' do
    .col.right
      = submit_tag 'Log in' , :class => 'nice small radius blue button'
    .col.right
      = password_field_tag 'user[password]', nil, :class => 'input-text nice small', :placeholder => 'password', :tabindex => 2
      = link_to 'Forgot your password?', new_password_path('user')
    .col.right
      = text_field_tag 'user[email]', nil, :class => 'input-text nice small', :placeholder => 'email', :tabindex => 1
      = check_box_tag 'user[remember_me]', nil, false, :tabindex => 3
      = label_tag 'user[remember_me]', 'Remember me'
